<div class="container mt-5">
    <h1>Reservation Form</h1>
    <form id="reservationForm" asp-action="ProcessReservation" asp-controller="Reservation" method="post">
        
       
            <div class="form-group">
                <label for="price-range">Price Range:</label>
                <input type="range" class="form-range" id="price-range" min="50" max="2000" step="50" value="50"
                       oninput="updatePriceRange(this.value);">
                <div class="d-flex justify-content-between align-items-center">
                    <span>$50</span>
                    <span>$2000</span>
                </div>
                <div class="d-flex justify-content-center">
                    <span id="price-range-value">$50</span>
                </div>
            </div>
        
        
        <div class="grid-container">
            <div>
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="Name" required>
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="Email" required>
            </div>
            <div>
                <label for="phone">Phone Number:</label>
                <input type="tel" class="form-control" id="phone" name="PhoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
            </div>
        </div>
        <div class="grid-container">
            <div>
                <label for="checkinDate">Check-in Date:</label>
                <input type="date" class="form-control" id="checkinDate" name="CheckinDate" required>
            </div>
            <div>
                <label for="checkoutDate">Check-out Date:</label>
                <input type="date" class="form-control" id="checkoutDate" name="CheckoutDate" required>
            </div>
            <div>
                <label for="guests">Number of Guests:</label>
                <input type="number" class="form-control" id="guests" name="Guests" min="1" max="10" required>
            </div>
        </div>
        <div class="grid-container">
            <div class="grid-item-full">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>
