@model IEnumerable<HotelBooking.Models.AppModels.AdminPanelBookings>

<style>
    body {
        color: white;
    }
    h2, th, td {
        color: white;
    }
</style>

<h2>Всички резервации</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Име</th>
        <th>Фамилия</th>
        <th>Хотел</th>
        <th>Снимка на хотела</th>
        <th>Начало</th>
        <th>Край</th>
        <th>Цена</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.ClientFirstName</td>
            <td>@b.ClientLastName</td>
            <td>@b.HotelModel.HotelName</td>
            <td><img src="@b.HotelModel.HotelImg" alt="Снимка на хотела" height="100" /></td>
            <td>@b.StartAt.ToString("dd.MM.yyyy") г.</td>
            <td>@b.EndAt.ToString("dd.MM.yyyy") г.</td>
            <td>@b.Price $</td>
        </tr>
    }
    </tbody>
</table>